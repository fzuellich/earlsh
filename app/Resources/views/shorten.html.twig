{% extends 'base.html.twig' %}

{% block content %}

<h2>Shorten an url</h2>

{{form_start(shorten_form, {'attr': {'class': 'form-horizontal'}})}}

<div class="text-danger">{{form_errors(shorten_form.url)}}</div>

<div class="form-group">
	<label class="col-sm-2 control-label">URL</label>
	<div class="col-sm-10">
		{{form_widget(shorten_form.url, {'attr': {'class': 'form-control', 'placeholder': 'http://...'}})}}
	</div>
</div>

{{form_widget(shorten_form.save, {'attr': {'class': 'col-sm-offset-2 btn btn-default'}})}}

{{form_end(shorten_form)}}

{% endblock %}