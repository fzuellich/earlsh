{% extends 'base.html.twig' %}

{% block content %}

<h2>Shorten an url</h2>

{{form_start(shorten_form, {'attr': {'class': 'form-horizontal', 'id': 'shorten-form'}})}}

<div class="text-danger">{{form_errors(shorten_form.url)}}</div>

<div class="form-group">
	<div class="col-sm-10">
		{{form_widget(shorten_form.url, {'attr': {'class': 'form-control', 'placeholder': 'http://...'}})}}
	</div>
	{{form_widget(shorten_form.save, {'attr': {'class': 'btn btn-default col-sm-2'}})}}
</div>


{{form_end(shorten_form)}}

{% endblock %}